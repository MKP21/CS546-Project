<div class="a2 page-wrapper bg-gra-01 p-t-180 p-b-100 font-poppins">
  <div class="wrapper wrapper--w780">
    <div class="card card-3">
      <div class="card-heading"></div>
      <div class="card-body">
        <h1 class="title">Login</h1>
        <form class="a1" action="/login" method="POST">
          <div class="input-group">
            <Label for="email">Email</Label>
            <input class="input--style-3" type="email" id="email" placeholder="Email" name="email" required>
          </div>
          <div class="input-group">
            <Label for="password">Password</Label>
            <input class="input--style-3" type="password" id="password" placeholder="Password" name="password" required>
          </div>
          <div class="p-t-10">
            <a href="/">
              <button class="btn btn--pill btn--green" type="submit">Login</button>
            </a>
          </div>
          <div class="p-t-10 etc">
            <a href="/signup">Go to Sign Up</a>
          </div>

        </form>
        {{#if message}}
        <p>{{this.message}}</p>
        {{/if}}

      </div>
    </div>
  </div>
</div>

<!-- Jquery JS-->
<script src="vendor/jquery/jquery.min.js"></script>
